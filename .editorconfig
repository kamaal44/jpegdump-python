# top-most EditorConfig file
root = true

# Default settings
[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.py]
trim_trailing_whitespace = true
indent_size = 4

[*.md}]
trim_trailing_whitespace = false
indent_size = 2